if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 0.9em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: none
    ol
      list-style: decimal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

$item
  border-radius: 2px
  padding: 2px 5px
  text-decoration: none

$li-item
  @extend $item

$a-item
  @extend $item
  &:before
    color: color-grey

.tagcloud a
  @extend $a-item    
  display: inline-block

.recent-posts li
  @extend $li-item
  fa-icon: fa-bookmark

.category-list li a
  @extend $a-item
  fa-icon: fa-list-alt

.archive-list li
  @extend $li-item
  fa-icon: fa-calendar

.tag-list li
  @extend $li-item
  fa-icon: fa-tag
